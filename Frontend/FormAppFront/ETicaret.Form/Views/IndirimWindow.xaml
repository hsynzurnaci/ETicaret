<Window x:Class="ETicaret.UI.Views.IndirimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kampanya Oluştur" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F8FAFC">

    <Border Background="White" Margin="20" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="#94A3B8" BlurRadius="15" Opacity="0.15"/>
        </Border.Effect>

        <StackPanel VerticalAlignment="Center" Margin="25">
            <TextBlock Text="🏷️ Kampanya / İndirim" FontSize="20" FontWeight="Bold" 
                       Foreground="#3B82F6" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Hangi Kategori?" Foreground="#64748B" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbKategoriler" Height="40" Margin="0,0,0,15" Padding="10,0"
                      Background="White" BorderBrush="#E2E8F0"/>

            <TextBlock Text="İndirim Oranı (%)" Foreground="#64748B" Margin="0,0,0,5"/>
            <TextBox x:Name="txtOran" Height="40" Margin="0,0,0,25" 
                     Padding="10" VerticalContentAlignment="Center"
                     BorderBrush="#E2E8F0"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="113*"/>
                    <ColumnDefinition Width="37*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="İptal" Click="Iptal_Click" Height="40"
                        Background="#EF4444" Foreground="White" BorderThickness="0" Margin="0,-20,0,20">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="1" Content="Uygula" Click="Uygula_Click" Height="40"
                        Background="#3B82F6" Foreground="White" BorderThickness="0" FontWeight="Bold" Grid.ColumnSpan="3" Margin="5,-20,5,20">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>